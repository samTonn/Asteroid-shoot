import pygame, sys
from pygame.locals import QUIT

#Global Setup
pygame.init()
WIDTH, HEIGHT = 1280,720
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption('Astroid SHOOT!')
clock = pygame.time.Clock()

shipW = 120
shipH = 80


shipSurf = pygame.Surface((shipW,shipH))
shipRect = shipSurf.get_rect(center = (WIDTH/2, HEIGHT/2))
shipX = WIDTH/2
shipY = HEIGHT/2

up = True
right = True
left = False
down = False

#Game Loop
while True:
    #Close Game Event
    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            sys.exit()
    
    clock.tick(120)

    #Section 1 - Sprites & Surfaces
            #BackGround, Player, Incoming Objects, Projectiles, Text
    
    #ship
    screen.fill((0,0,0))
    shipSurf.fill((155,155,155))
    screen.blit(shipSurf, shipRect)
    
    #Section 2 - Controls (Interactions)
            #Movement (Mouse), Buttons (Projectiles)
    
    if shipX <= 0:
        right = True
        left = False
    if shipY <= 0:
        up = True
        down = False
    if shipX >= WIDTH - shipW: #FIX
        left = True
        right = False
    if shipY >= HEIGHT - shipH:
        down = True
        up = False
    
    if up:
        shipRect.y += 2
    if right:
        shipRect.x += 3
    if left:
        shipRect.x -= 3
    if down:
        shipRect.y -= 2
    
    
    
    #Section 3 - Game Updates (Gameplay)
            #Mandatory: Movement Code Player, List for Asteroids, Iteration, Collisions
            #Extras: Score, Lives, Splits
            
    
    #Final Visual Update To User
    pygame.display.update()
